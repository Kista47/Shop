@{
}
@model Toy
<div class="d-inline-block m-4">
    <div class="card" style="width: 18rem;">
        <img src="~/Images/no-photo.png" class="card-img-top" alt="...">
        <div class="card-body">
            <form action="~/Admin/UpdateToy" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <p class="card-text"><input asp-for="@Model.Name" /></p>
                <p class="card-text"><input asp-for="@Model.Info" /></p>
                <p class="card-text"><input asp-for="@Model.Price" /> руб.</p>
                <button type="submit">Сохранить изменения</button>
                <a asp-action="Update" asp-controller="Admin" class="btn btn-primary bg-danger">Отмена</a>
            </form>
        </div>
    </div>
</div>