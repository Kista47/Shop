<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Магазин игрушек</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site-style.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="~/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>

</head>
<body>
    <div class="contaiber text-center">
        <img class="" src="~/Images/Logo.png" height="180">
    </div>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-xl navbar-dark" style="background-color:#46211A;">
            <button class="navbar-toggler mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav w-100 justify-content-center">

                    <li class="nav-item nav-li active">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Главная</a>
                    </li>

                    <li class="nav-item nav-li active">
                        <a class="nav-link" asp-action="Index" asp-controller="Catalog">
                            @*<img src="~/Images/Catalog-icon.png" width="40" height="30" class="d-inline-block align-top" alt="">*@
                            Каталог
                        </a>
                    </li>

                    <li class="nav-item nav-li dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @*<img src="~/Images/Constructor-icon.png" width="40" height="35" class="d-inline-block align-top" alt="">*@
                            Конструктор
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Создать макет</a>
                            <a class="dropdown-item" href="#">Импортировать макет</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Как это работает</a>
                        </div>
                    </li>

                    <li class="nav-item p-0 nav-li active">
                        <a class="nav-link rounded badge-success" asp-action="Index" asp-controller="Basket">
                            Корзина
                            <span class="badge badge-light">0</span>
                        </a>
                    </li>

                    <li class="nav-item p-0 nav-li active">
                        <a class="nav-link rounded badge-success" asp-action="Index" asp-controller="Admin">
                            Админ
                        </a>
                    </li>

                    <li class="nav-item p-0 nav-li active">

                        <form class="form-inline nav-link">
                            <input class="form-control mr-sm-2" name="keyWords" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-danger my-2 my-sm-0" type="submit" asp-controller="Catalog" asp-action="Index" asp-route-id="0">Поиск</button>

                        </form>
                    </li>
                </ul>

            </div>
        </nav>
    </header>

    @RenderBody()

    <div class="container">
        <div class="row">
            <div class="container mw-100">
                <p>Социальные сети</p>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
