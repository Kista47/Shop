<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Магазин игрушек</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css"/>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md navbar-dark" style="background-color:#46211A;">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Логотип</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-controller="Catalog">
                            <img src="~/Images/Catalog-icon.png" width="40" height="30" class="d-inline-block align-top" alt="">
                            Каталог
                        </a>
                    </li>

                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/Images/Constructor-icon.png" width="40" height="35" class="d-inline-block align-top" alt="">
                            Конструктор
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Создать макет</a>
                            <a class="dropdown-item" href="#">Импортировать макет</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Как это работает</a>
                        </div>
                    </li>
                    <li class="nav-item active" style="font-size: 26px">
                        <a class="nav-link badge badge-success" asp-action="AddToy" asp-controller="Admin">
                            Корзина
                            <span class="badge badge-light">0</span>
                        </a>
                    </li>
                    <li class="nav-item active" style="font-size: 26px; margin-left:50px">
                        <a class="nav-link badge badge-success" asp-action="Index" asp-controller="Admin">
                            Админ
                        </a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-danger my-2 my-sm-0" type="submit">Поиск</button>
                </form>
            </div>
        </nav>
    </header>
    @*<div class="container-fluid">*@
        @RenderBody()
    @*</div>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
