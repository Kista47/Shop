@{
}
@using MVCShop.Views.Basket
@model BasketViewModel
<div class="container slider">
    <div class="col">
        <table class="basket-tab">
            <tr>
                <th>Фото</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Удалить все</th>
            </tr>
            @if (Model.toys?.Any() == true)
            {
                @foreach (Toy toy in Model.toys)
                {
                    <tr>
                        <th>Фото</th>
                        <th>@toy.Name</th>
                        <th>@toy.Info</th>
                        <th>@toy.Price</th>
                        <th>Кнопка удалить </th>
                    </tr>
                }
            }
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th>Общая стоимость:@Model.Price</th>
                <th>Удалить все</th>
            </tr>
        </table>

    </div>
</div>